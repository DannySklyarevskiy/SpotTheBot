{
  "manifest_version": 3,
  "name": "Spot the Bot",
  "version": "1.0",
  "description": "Add random number buttons to tweets",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://www.randomnumberapi.com/*",
    "https://www.randomnumberapi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}